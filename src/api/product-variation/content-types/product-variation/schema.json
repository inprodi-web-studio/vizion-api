{
  "kind": "collectionType",
  "collectionName": "product_variations",
  "info": {
    "singularName": "product-variation",
    "pluralName": "product-variations",
    "displayName": "Product Variation",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "uuid": {
      "type": "string"
    },
    "sku": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "dimensions": {
      "type": "component",
      "repeatable": false,
      "component": "product.dimensions"
    },
    "values": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::attribute-value.attribute-value",
      "inversedBy": "variations"
    },
    "name": {
      "type": "string"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "variations"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "saleInfo": {
      "type": "component",
      "repeatable": false,
      "component": "product.sale-information"
    },
    "purchaseInfo": {
      "type": "component",
      "repeatable": false,
      "component": "product.purchase-info"
    },
    "stockInfo": {
      "type": "component",
      "repeatable": false,
      "component": "product.stock-info"
    },
    "packages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::package.package",
      "mappedBy": "variation"
    },
    "stocks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::stock.stock",
      "mappedBy": "variation"
    },
    "stockPackages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::adjustment-motive.adjustment-motive",
      "mappedBy": "stockVariation"
    },
    "createdByUser": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
